<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/darkGreyForBackrounds">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="19dp"
        android:text="@string/TimeTrackerText"
        android:textColor="@color/OpenBoxGreen"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <!-- need to get user details and display -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="14dp"
        android:text="name and surname: position"
        android:textColor="@color/greyForBackrounds"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRLeft="true"
        android:layout_below="@+id/textView2" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@color/darkGreyForBackrounds"
            android:text="Display Floor Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/greyForBackrounds" />

        <TableRow
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_alignLeft="@+id/TextView04"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="@string/TimeTrackerLocationText"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_alignLeft="@+id/TextView04"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="Duration"
                android:textColor="#000000" />
            
        </TableRow>
    </TableLayout>
      
</RelativeLayout>